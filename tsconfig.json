{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "composite": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src/",
        "paths": {
            "types": ["../types.d.ts"]
        }
    },
    "include": ["src/**/*.ts", "types.d.ts"]
}
